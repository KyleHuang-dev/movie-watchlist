<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <link rel="stylesheet" href="css/style.css">

<body>


    <%- include('nav'); -%>
    <section id="movie-section" class="p-5 bg-secondary">
        <div class="container">
            <% console.log("abc") %>
            <h1>Movies</h1>
            <div class="row g-4">
                <% for ( let i = 0; i<addMovies.length;i++ ) { %>
                <div class="col-md-6 col-lg-3">
                    <div class="card bg-light">
                        <div class="card-body text-center movieItem" data-id='<%=addMovies[i].id%>' data-title='<%=addMovies[i].title%>' data-poster='<%addMovies[i].poster_path%>'>
                            <img
                            src="https://image.tmdb.org/t/p/w200<%= addMovies[i].poster_path %> "
                            class="mb-3"
                            alt=""
                            />
                            <h3 class="card-title mb-3"> <%= addMovies[i].title %> </h3>
                            <p class="card-text">
                            Vote: <%= addMovies[i].vote_average %> 
                            </p>
                            <p>Release date: <%= addMovies[i].release_date %> </p>
                            <button class='add btn btn-primary'>Add to watch list</button>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </section>
    <script src="/js/main.js"></script>
</body>
</html>