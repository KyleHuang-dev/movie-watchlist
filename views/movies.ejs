<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <link rel="stylesheet" href="css/style.css">
    
</head>

<body>
    <%- include('nav'); -%>
    <h1>Movies</h1>
    <ul>
        <% movies.forEach( el=> { %>
            <li class='movieItem' data-id='<%=el._id%>'>
                <span class='<%= el.completed === true ? ' completed' : 'not' %>'><%= el.movie %></span>
                <span class='del'> Delete </span>
            </li>
            <% }) %>
    </ul>

    <h2>
        <%= user.userName %> has <%= left %> things left to do.
    </h2>




    <form action="/movies/addMovie" method='POST'>
        <input type="text" placeholder="Enter a movie" name='movieItem'>
        <input type="submit">
    </form>

    <a href="/logout">Logout</a>


    <!-- Movie Section -->
    <section id="movie-section" class="p-5 bg-secondary">
        <div class="container">
          <h2 class="text-center text-white">Movies</h2>
          <p class="lead text-center text-white mb-5">
            The best movies of all time!! 
          </p>
          <div class="row g-4">

            <% for ( let i = 0; i<data.results.length;i++ ) { %>
              <div class="col-md-6 col-lg-3">
                <div class="card bg-light">
                  <div class="card-body text-center">
                    <img
                      src="https://image.tmdb.org/t/p/w200<%= data.results[i].poster_path %> "
                      class="mb-3"
                      alt=""
                    />
                    <h3 class="card-title mb-3"> <%= data.results[i].title %> </h3>
                    <p class="card-text">
                     Vote: <%= data.results[i].vote_average %> 
                    </p>
                    <p>Release date: <%= data.results[i].release_date %> </p>
                  </div>
                </div>
              </div>
            <% } %>
  
          </div>
        </div>
      </section>


    <script src="js/main.js"></script>
</body>

</html>